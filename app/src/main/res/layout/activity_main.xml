<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawer_layout">

    <!--Navigation view -> on modifie la couleur du navigation view ici -->


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:background="@color/black"
        >


        <TextView
            android:id="@+id/result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/buttons_layout"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="-15dp"
            android:paddingRight="30dp"
            android:text="0"
            android:textAlignment="textEnd"
            android:textColor="@color/white"
            android:textSize="64dp"
            android:maxLines="1"
            android:singleLine="true"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/buttons_layout"
            android:layout_alignParentBottom="true"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                >
                <com.google.android.material.button.MaterialButton
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    app:cornerRadius="36dp"
                    style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                    android:text="AC"
                    android:textSize="21dp"
                    android:textColor="@color/black"
                    android:layout_margin="12dp"
                    android:id="@+id/buttonac"
                    android:backgroundTint="#809E9B"
                    />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button_modulo"
                    style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginEnd="12dp"
                    android:layout_marginBottom="12dp"
                    android:text="@string/modulo"
                    android:textColor="@color/black"
                    android:textSize="32dp"
                    app:cornerRadius="36dp"
                    android:textAlignment="center"
                    android:backgroundTint="#809E9B"
                    />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/puissance_carree"
                    style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginEnd="12dp"
                    android:layout_marginBottom="12dp"
                    android:text="@string/xSquaredText"
                    android:textColor="@color/black"
                    android:textSize="24dp"
                    app:cornerRadius="36dp"
                    android:backgroundTint="#809E9B"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/buttondivided"
                    style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginEnd="12dp"
                    android:layout_marginBottom="12dp"
                    android:text="รท"
                    android:textColor="@color/white"
                    android:textSize="32dp"
                    app:cornerRadius="36dp"
                    android:backgroundTint="#FF9800"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                >
                <com.google.android.material.button.MaterialButton
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    app:cornerRadius="36dp"
                    style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                    android:text="7"
                    android:textSize="32dp"
                    android:textColor="@color/white"
                    android:layout_margin="12dp"
                    android:id="@+id/button7"
                    android:backgroundTint="#404746"
                    />
                <com.google.android.material.button.MaterialButton
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    app:cornerRadius="36dp"
                    style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                    android:text="8"
                    android:textSize="32dp"
                    android:textColor="@color/white"
                    android:id="@+id/button8"
                    android:layout_margin="12dp"
                    android:backgroundTint="#404746"
                    />
                <com.google.android.material.button.MaterialButton
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    app:cornerRadius="36dp"
                    style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                    android:text="9"
                    android:textSize="32dp"
                    android:textColor="@color/white"
                    android:layout_margin="12dp"
                    android:id="@+id/button9"
                    android:backgroundTint="#404746"
                    />
                <com.google.android.material.button.MaterialButton
                    android:backgroundTint="#FF9800"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    app:cornerRadius="36dp"
                    style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                    android:text="ร"
                    android:gravity="center"
                    android:textSize="32dp"
                    android:textColor="@color/white"
                    android:layout_margin="12dp"
                    android:id="@+id/buttonmult"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                >
                <com.google.android.material.button.MaterialButton
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    app:cornerRadius="36dp"
                    style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                    android:text="4"
                    android:textSize="32dp"
                    android:textColor="@color/white"
                    android:layout_margin="12dp"
                    android:id="@+id/button4"
                    android:backgroundTint="#404746"
                    />
                <com.google.android.material.button.MaterialButton
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    app:cornerRadius="36dp"
                    style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                    android:text="5"
                    android:textSize="32dp"
                    android:textColor="@color/white"
                    android:layout_margin="12dp"
                    android:backgroundTint="#404746"
                    android:id="@+id/button5"
                    />
                <com.google.android.material.button.MaterialButton
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    app:cornerRadius="36dp"
                    style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                    android:text="6"
                    android:textSize="32dp"
                    android:textColor="@color/white"
                    android:layout_margin="12dp"
                    android:backgroundTint="#404746"
                    android:id="@+id/button6"
                    />
                <com.google.android.material.button.MaterialButton
                    android:backgroundTint="#FF9800"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    app:cornerRadius="36dp"
                    style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                    android:text="-"
                    android:textSize="32dp"
                    android:textColor="@color/white"
                    android:id="@+id/buttonmin"
                    android:layout_margin="12dp"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                >
                <com.google.android.material.button.MaterialButton
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    app:cornerRadius="36dp"
                    style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                    android:text="1"
                    android:textSize="32dp"
                    android:textColor="@color/white"
                    android:id="@+id/button1"
                    android:layout_margin="12dp"
                    android:backgroundTint="#404746"
                    />
                <com.google.android.material.button.MaterialButton
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    app:cornerRadius="36dp"
                    style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                    android:text="2"
                    android:textSize="32dp"
                    android:id="@+id/button2"
                    android:textColor="@color/white"
                    android:layout_margin="12dp"
                    android:backgroundTint="#404746"
                    />
                <com.google.android.material.button.MaterialButton
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    app:cornerRadius="36dp"
                    style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                    android:text="3"
                    android:textSize="32dp"
                    android:textColor="@color/white"
                    android:layout_margin="12dp"
                    android:id="@+id/button3"
                    android:backgroundTint="#404746"
                    />
                <com.google.android.material.button.MaterialButton
                    android:backgroundTint="#FF9800"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    app:cornerRadius="36dp"
                    style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                    android:text="+"
                    android:textSize="32dp"
                    android:id="@+id/buttonplus"
                    android:textColor="@color/white"
                    android:layout_margin="12dp"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                >
                <com.google.android.material.button.MaterialButton
                    android:layout_width="170dp"
                    android:layout_height="72dp"
                    app:cornerRadius="36dp"
                    style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton.Icon"
                    android:text="0"
                    android:textSize="32dp"
                    android:id="@+id/button0"
                    android:textColor="@color/white"
                    android:layout_margin="12dp"
                    android:backgroundTint="#404746"
                    />

                <com.google.android.material.button.MaterialButton
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    app:cornerRadius="36dp"
                    style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                    android:text=","
                    android:textSize="32dp"
                    android:textColor="@color/white"
                    android:id="@+id/buttonv"
                    android:layout_margin="12dp"
                    android:backgroundTint="#404746"
                    />
                <com.google.android.material.button.MaterialButton
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    app:cornerRadius="36dp"
                    style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                    android:text="="
                    android:textSize="32dp"
                    android:id="@+id/buttonequal"
                    android:textColor="@color/white"
                    android:layout_margin="12dp"
                    android:backgroundTint="#FF9800"
                    />

            </LinearLayout>

        </LinearLayout>


    </RelativeLayout>

    <com.google.android.material.navigation.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/navigationview"
        app:menu="@menu/main_menu"
        android:fitsSystemWindows="true"
        android:layout_gravity="start"
        android:background="#EDE6DFDF"
        android:clickable="true"
        >



    </com.google.android.material.navigation.NavigationView>

</androidx.drawerlayout.widget.DrawerLayout>

